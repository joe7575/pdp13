                                 ;  Boot Loader v1.0

                                 ;  Deposite the code at address 0x0F00

                                 ;        .code

0000h: 108Ch                     ; START:  move    x, #0           ; code start address

0001h: 500Ch                     ; LOOP:   in      A, #0           ; read status from input #0
0002h: 4412h, FFFFh              ;         bze     A, +LOOP        ; No data => try again
0004h: 500Dh                     ;         in      A, #1           ; read data from input #1
0005h: 1140h                     ;         move    [X]+, A         ; move data to memory via X
0006h: 1412h, FFFBh              ;         jump    +LOOP           ; repeat
